{
    "env": {
        "browser": true,
        "es6": true,
        "greasemonkey": true,
        "jquery": true
    },
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "rules": {
        "prettier/prettier": "error",
        "prefer-template": "error",
        "no-console": "off",
        "no-inner-declarations": "warn",
        "no-global-assign": "warn",
        "no-redeclare": "warn",
        "no-self-assign": "warn",
        "no-undef": "warn",
        "no-useless-concat": "warn",
        "no-useless-escape": "warn",
        "no-unused-vars": "warn",
        "no-var": "warn"
    }
}
